<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="%category.name"
            id="EditerMacro.commands.category">
      </category>
      <command
            name="コメントアウト"
            categoryId="EditerMacro.commands.category"
            id="EditerMacro.commands.commentOut">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="EditerMacro.commands.commentOut"
            class="editermacro.handlers.EditorMacroHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="EditerMacro.commands.commentOut"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="EditerMacro.menus.macro"
               label="マクロ"
               mnemonic="%menu.mnemonic">
            <command
                  commandId="EditerMacro.commands.commentOut"
                  id="EditerMacro.menus.cmd.commentOut"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="EditerMacro.toolbars.sampleToolbar">
            <command
                  commandId="EditerMacro.commands.commentOut"
                  icon="icons/sample.gif"
                  tooltip="コメントアウト"
                  id="EditerMacro.toolbars.commentOut">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="EditerMacro.menus.sampleMenu"
               label="マクロ"
               mnemonic="%menu.mnemonic">
            <command
                  commandId="EditerMacro.commands.commentOut"
                  id="EditerMacro.menus.cmd.commentOut"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
